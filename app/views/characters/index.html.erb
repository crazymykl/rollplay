<div class="nav">
<% if logged_in? %>
  <h2>Your Characters</h2>
  <ul>
    <% @characters.each do |character| %>
      <li><%= link_to character.name, character %> - <%= character.description %></li>
    <% end %>
  <ul>
<% else %>
  <div>Log in to view characters!</div>
  <div class="background"><%= image_tag "dice.jpg", id: "dice" %></div>
<% end %>
<%= link_to 'Create a Character Sheet', new_character_path %>
</div>

<% if logged_in? %>
    <%= button_to 'Delete Account', current_user, method: :delete, data: { confirm: 'You sure? All characters will be deleted too' }  %>
<% end %>
